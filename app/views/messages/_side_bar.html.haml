.side-bar 
  .side-bar__user-name 
    %ul.side-bar__user-name__top-items
      %li.side-bar__user-name__top-items__name
        = current_user.name
      %li.side-bar__user-name__top-items__icons
        = link_to new_group_path do
          = icon("far", "edit")
        = link_to edit_user_path(current_user) do
          = icon("fas", "cog")
  .side-bar__group-list
    - current_user.groups.each do |group|
      %ul.side-bar__group-list__new-messages
        = link_to group_messages_path(group) do
          %li.group-name
            = group.name
          %li.message-title
            = group.show_last_message