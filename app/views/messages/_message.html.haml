.chat-main__messages__message-list
  .chat-main__messages__message-list__posted-info
    .chat-main__messages__message-list__posted-info__user-name
      = message.user.name
    .chat-main__messages__message-list__posted-info__date-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .posted-message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
